{
  "name": "@nestdotland/ui",
  "version": "0.1.0-test.6",
  "author": "Maximous Black",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "prepare": "tsdx build",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "sb": "start-storybook -p 6006",
    "sb:build": "build-storybook --output-dir static"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@chakra-ui/react": "^1.6.6",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "framer-motion": "^4.1.17"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addons": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "babel-loader": "^8.2.2",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
